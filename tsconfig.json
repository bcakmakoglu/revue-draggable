{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es6", "dom", "es2016", "es2017", "es2020"],
    "types": ["@types/node"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "vue":["@vue/runtime-core"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
